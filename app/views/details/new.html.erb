<h1>Experience</h1>

<%= form_for @detail, url: details_path do |f|  %>
<p>
    <%= f.label :category %><br />
    <%= f.collection_select(:categoryID, @categories, :id, :name, :include_blank => "Please select") %>
  <p>
     Public
      <%= f.radio_button :public, "1", :checked => true %>
      Private
      <%= f.radio_button :public, "0" %>
